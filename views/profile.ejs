<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full-screen bg-zinc-900 text-white p-10">
      <div class="w-full items-end">
        <a
          class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block"
          href="/logout"
          >logout</a
        >
      </div>
      <h3 class="text-3xl mb-2">
        <samp class="font-light">Hello</samp>, <%=user.username%>
      </h3>
      <h5 class="mb-5">You can create a post.</h5>
      <form action="/post" method="post">
        <textarea
          placeholder="What's on your mind ?"
          class="p-3 outline-none block resize-none bg-transparent border-2 border-zinc-800 rounded-md"
          name="content"
          id=""
        ></textarea>
        <input
          class="px-3 width-40 bg-blue-500 block rounded-md mt-2"
          type="submit"
          value="Create New Post"
        />
      </form>

      <div class="post mt-20">
        <h3 class="text-zinc-400 mt-5"></h3>
        <div class="postcontainer mt-5">
          <% user.posts.reverse().forEach(function(post){ %>
          <div
            class="post w-1/3 p-4 border-2 mb-4 rounded border-zinc-800 bg-zinc-700"
          >
            <h4 class="text-blue-500 mb-2"><%= user.username %></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <small class="mt-2 inline-block"><%=post.likes.length %> like</small>
            <div class="btns flex gap-2 mt-5">
              <a class="text-blue-500" href="/like/<%=post._id %>">
                <%=post.likes.indexOf(user._id)=== -1 ?"like":"Unlink"%>
              </a>
              <a class="text-zinc-600 " href="/edit/<%=post.id%>">Edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
